{
  "_source": {
    "excludes": [
      "sfomuseum:description_embeddings"
    ]
  },
  "query": {
    "bool": {
      "should": [
        {
          "script_score": {
            "query": {
              "neural": {
                "sfomuseum:description_embeddings": {
                  "query_text": "{QUERY}",
                  "model_id": "{MODEL}",
                  "k": 10
                }
              }
            },
            "script": {
              "source": "_score * 1.5"
            }
          }
        },
        {
          "script_score": {
            "query": {
              "match": {
                "sfomuseum:description": "{QUERY}"
              }
            },
            "script": {
              "source": "_score * 1.7"
            }
          }
        }
      ]
    }
  }
}
